<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Introcolor</item>
        <item name="colorPrimaryDark">@color/Introcolor</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/Introcolor</item>
    </style>

    <style name="MyTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>


    <style name="Branco" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppThemeToolbar" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Toolbar background color -->
        <item name="colorPrimary">#ff212cff</item>

    </style>

    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FacebookBlockButton" parent="AppTheme.BlockButton">
        <item name="android:background">@color/facebook_blue</item>
        <item name="android:drawableLeft">@drawable/com_facebook_button_icon</item>
        <item name="android:textColor">@color/Branco</item>
    </style>

    <style name="AppTheme.GoogleBlockButton" parent="AppTheme.BlockButton">
        <item name="android:background">@color/Branco</item>
        <item name="android:drawableLeft">@drawable/googleg_standard_color_18</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.BlockButton">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="tool" parent="AppThemeToolbar">
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>



    </style>


    <style name="AppTheme.OverlayToolbar" parent="AppThemeToolbar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">@color/transparent
        </item>  <!-- colocar seconde color aqui de alguma forma pois nao pode subtituir se nao a toolbar aparece-->
        <item name="colorPrimaryDark">@color/secondaryDarkColor</item>
        <item name="colorAccent">@color/secondaryLightColor</item>


    </style>

    <style name="AppTheme.OverlayToolbar." parent="AppThemeToolbar">
        <item name="drawerArrowStyle">@style/Branco</item>
        <item name="colorAccent">@color/primaryLightColor</item>!-- colocar seconde color aqui de
        alguma forma pois nao pode subtituir se nao a toolbar aparece-->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>


    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


</resources>
